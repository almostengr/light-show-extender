{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Almostengr.FalconPiTwitter.Worker/Almostengr.FalconPiTwitter.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Release Project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none"
        },
        {
            "label": "Publish Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-r",
                "linux-arm",
                "--self-contained",
                "-c",
                "Release",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["Clean Release Project"]
        },
        {
            "label": "Deploy Local",
            "command": "scp",
            "type": "shell",
            "args": [
                "-p",
                "${workspaceRoot}/Almostengr.FalconPiTwitter.Worker/appsettings.json",
                "${workspaceRoot}/Almostengr.FalconPiTwitter.Worker/bin/Release/net6.0/linux-arm/publish/*",
                "${workspaceRoot}/falconpitwitter.service",
                "fpp@falconpi://home/fpp/media/plugins/falconpitwitter",
            ],
            "group": "none",
            "dependsOn": ["Publish Release"]
        },
        {
            "label": "Package Release",
            "command": "tar",
            "type": "shell",
            "args": [
                "-C",
                "${workspaceRoot}/Almostengr.FalconPiTwitter.Worker/bin/Release/net6.0/linux-arm/publish/",
                "-czf",
                "/home/almostengineer/Downloads/falconpitwitter.tar.gz",
                "."
            ],
            "dependsOn": ["Publish Release"],
        },
        {
            "label": "Tag Release",
            "command" : "git",
            "type": "shell",
            "args": [
                "tag",
                "-a",
                "\"v$(date +%Y.%m.%d)\"",
                "-m",
                "\"version $(date +%Y.%m.%d)\""
            ],
            "dependsOn": ["Package Release"],
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Almostengr.FalconPiTwitter.Worker/Almostengr.FalconPiTwitter.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Almostengr.FalconPiTwitter.Worker/Almostengr.FalconPiTwitter.Worker.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}