{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "cp",
                "-p",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/appsettings.json",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/bin/Debug/netcoreapp3.1/",
                "&&",
                "dotnet",
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary",
                "\""
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Release Project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none"
        },
        {
            "label": "Publish Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-r",
                "linux-arm",
                "-c",
                "Release",
                "-o",
                "release",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["Clean Release Project"]
        },
        {
            "label": "Create Release",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "dotnet",
                "clean",
                "-c",
                "debug",
                "&&",
                "dotnet",
                "publish",
                "--self-contained",
                "-r",
                "linux-arm",
                "-c",
                "Release",
                // "-o",
                // "${workspaceRoot}/fpmonitor",
                "&&",
                "tar",
                "-cf",
                "package/FalconPiTwitter.tar",
                // "fpmonitor/*",
                "${workspaceRoot}/bin/RELEASE/netcoreapp3.1/linux-arm/publish/*",
                "&&",
                "zip",
                "package/FalconPiTwitter.zip",
                // "fpmonitor/*",
                "${workspaceRoot}/bin/RELEASE/netcoreapp3.1/linux-arm/publish/*",
                "&&",
                "git",
                "tag",
                "|",
                "tail",
                "-1",
                "\""
            ],
            "group": "none",
            "dependsOn": ["Publish Release"]
        },
        {
            "label": "Deploy Local",
            "command": "scp",
            "type": "shell",
            "args": [
                "-p",
                "${workspaceRoot}/release/*",
                "${workspaceRoot}/falconpitwitter.service",
                "fpp@falconpi://home/fpp/fpmonitor",
            ],
            "group": "none",
            "dependsOn": ["Publish Release"]
        }
    ]
}