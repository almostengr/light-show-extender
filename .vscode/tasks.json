{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "cp",
                "-p",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/appsettings.json",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/bin/Debug/netcoreapp3.1/",
                "&&",
                "dotnet",
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary",
                "\""
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Release Project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none"
        },
        {
            "label": "Publish Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-r",
                "linux-arm",
                "-c",
                "Release",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["Clean Release Project"]
        },
        {
            "label": "Deploy Local",
            "command": "scp",
            "type": "shell",
            "args": [
                "-p",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/appsettings.json",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/bin/Release/netcoreapp3.1/linux-arm/*",
                "${workspaceRoot}/falconpitwitter.service",
                "fpp@falconpi://home/fpp/media/plugins/falconpitwitter",
            ],
            "group": "none",
            "dependsOn": ["Publish Release"]
        }
    ]
}