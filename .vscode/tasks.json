{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Almostengr.FalconPiTwitter.Worker/Almostengr.FalconPiTwitter.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Release Project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none"
        },
        {
            "label": "Publish Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-r",
                "linux-arm",
                "--self-contained",
                "-c",
                "Release",
                "-o",
                "/home/almostengineer/fptrelease",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["Clean Release Project"]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Almostengr.FalconPiTwitter.Worker/Almostengr.FalconPiTwitter.Worker.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}