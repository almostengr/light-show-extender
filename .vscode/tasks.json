{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "cp",
                "-p",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/appsettings.json",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/bin/Debug/net5.0/",
                "&&",
                "dotnet",
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary",
                "\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet clean -c debug",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "debug",
            ],
            "group": "none"
        },
        {
            "label": "dotnet clean -c release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none",
            "dependsOn": ["dotnet clean -c debug"]
        },
        {
            "label": "dotnet publish -c release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "--self-contained",
                "-r",
                "linux-arm",
                "-c",
                "Release",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["dotnet clean -c release"]
        },
        {
            "label": "tar release files",
            "command" : "tar",
            "type": "shell",
            "args": [
                "-czf",
                "${workspaceRoot}/falconpitwitter.tar.gz",
                "-C",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/bin/Release/net5.0/linux-arm/publish/",
                "."
            ],
            "group": "none",
            "dependsOn": ["dotnet publish -c release"],
        },
        {
            "label": "git tag release",
            "command" : "git",
            "type": "shell",
            "args": [
                "tag",
                "-a",
                "\"v$(date +%Y.%m.%d)\"",
                "-m",
                "\"version $(date +%Y.%m.%d)\""
            ],
            "dependsOn": ["tar release files"],
        },
        {
            "label": "Deploy Local",
            "command": "scp",
            "type": "shell",
            "args": [
                "-p",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/appsettings.json",
                "${workspaceRoot}/Almostengr.FalconPiTwitter/bin/Release/net5.0/linux-arm/*",
                "${workspaceRoot}/falconpitwitter.service",
                "fpp@falconpi://home/fpp/media/plugins/falconpitwitter",
            ],
            "group": "none",
            "dependsOn": ["Publish Release"]
        }
    ]
}